{
  "openapi": "3.0.0",
  "info": {
    "title": "User Authentication API",
    "version": "1.0.0",
    "description": "API for user registration, login, and logout with JWT-based authentication."
  },
  "paths": {
    "/auth/register": {
      "post": {
        "summary": "Register a new user",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UserRegistration"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "User berhasil terdaftar!",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UserRegistration"
                }
              }
            }
          },
          "400": {
            "description": "Invalid input"
          },
          "409": {
            "description": "Conflict Email"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/auth/login": {
      "post": {
        "summary": "Login dan mendapatkan token",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UserLogin"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login successful",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AuthResponse"
                }
              }
            }
          },
          "400": {
            "description": "Invalid input"
          },
          "401": {
            "description": "Invalid Password"
          },
          "404": {
            "description": "Username tidak di temukan!"
          }
        }
      }
    },
    "/auth/logout/{id}": {
      "delete": {
        "summary": "Logout user",
        "description": "Logout dan menghapus token",
        "responses": {
          "200": {
            "description": "Logout successful"
          },
          "404": {
            "description": "Token Null Pada database!"
          }
        }
      }
    },
    "/task": {
      "get": {
        "summary": "Get All Tasks and Search Pagination",
        "security": {
          "bearerAuth": {
            "type": "http",
            "scheme": "bearer",
            "bearerFormat": "JWT"
          }
        },
        "parameters": [
          {
            "name": "page",
            "in": "query",
            "required": false,
            "description": "Page Number",
            "schema": {
              "type": "integer"
            }
          },
          {
            "name": "limit",
            "in": "query",
            "required": false,
            "description": "Number of Tasks to Return",
            "schema": {
              "type": "integer"
            }
          },
          {
            "name": "search",
            "in": "query",
            "required": false,
            "description": "Search for Tasks by title",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "A list of tasks",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "response": {
                      "type": "array"
                    },
                    "totalPages": {
                      "type": "integer"
                    },
                    "currentPage": {
                      "type": "integer"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "post": {
        "Summary": "Create data task",
        "security": {
          "bearerAuth": {
            "type": "http",
            "scheme": "bearer",
            "bearerFormat": "JWT"
          }
        },
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "title": "string",
              "description": "string",
              "dueDate": "date",
              "priority": "string",
              "status": "string",
              "tags": "array"
            }
          }
        },
        "response": {
          "201": {
            "description": "Task created successfully!",
            "content": {
              "application/json": {
                "message": "Data berhasil di simpan!"
              }
            }
          },
          "400": {
            "description": "Bad Request"
          },
          "409": {
            "description": "Conflict"
          },
          "500": "Internal Server Error"
        }
      }
    },
    "/task/{id}": {
      "get": {
        "Summary": "Get Task By ID",
        "security": {
          "bearerAuth": {
            "type": "http",
            "scheme": "bearer",
            "bearerFormat": "JWT"
          }
        },
        "parameters": {
          "params": {
            "id": {
              "type": "string"
            }
          }
        },
        "responses": {
          "200": {
            "description": "Task Data By ID",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "response": {
                      "type": "object"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal server error"
          }
        }
      },
      "put": {
        "Summary": "Update data task",
        "security": {
          "bearerAuth": {
            "type": "http",
            "scheme": "bearer",
            "bearerFormat": "JWT"
          }
        },
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "title": "string",
              "description": "string",
              "dueDate": "date",
              "priority": "string",
              "status": "string",
              "tags": "array"
            }
          }
        },
        "response": {
          "200": {
            "description": "Task created successfully!",
            "content": {
              "application/json": {
                "message": "Data berhasil di ubah!"
              }
            }
          },
          "400": {
            "description": "Bad Request"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      },
      "delete": {
        "Summary": "Delete data task",
        "security": {
          "bearerAuth": {
            "type": "http",
            "scheme": "bearer",
            "bearerFormat": "JWT"
          }
        },
        "parameters": {
          "params": {
            "id": {
              "type": "string"
            }
          }
        },
        "response": {
          "204": {
            "description": "Task deleted successfully"
          },
          "404": {
            "description": "Not Found"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "User": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique identifier for the user"
          },
          "email": {
            "type": "string",
            "format": "email",
            "description": "User's email address"
          },
          "username": {
            "type": "string",
            "description": "User's username"
          },
          "password": {
            "type": "string",
            "description": "User's password (hashed)"
          },
          "token": {
            "type": "string",
            "description": "JWT token for the user"
          }
        }
      },
      "UserRegistration": {
        "type": "object",
        "required": ["email", "username", "password"],
        "properties": {
          "email": {
            "type": "string",
            "format": "email"
          },
          "username": {
            "type": "string"
          },
          "password": {
            "type": "string",
            "description": "User's password in plaintext (should meet password requirements)"
          }
        }
      },
      "UserLogin": {
        "type": "object",
        "required": ["username", "password"],
        "properties": {
          "username": {
            "type": "string"
          },
          "password": {
            "type": "string"
          }
        }
      },
      "AuthResponse": {
        "type": "object",
        "properties": {
          "token": {
            "type": "string",
            "description": "JWT token for the authenticated user"
          }
        }
      }
    },
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  },
  "security": [
    {
      "bearerAuth": []
    }
  ]
}
